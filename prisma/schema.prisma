generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Categories {
  id            Int      @id @default(autoincrement())
  nama_kategori String
  barangs       Items[]
}

model Items {
  id              Int      @id @default(autoincrement())
  nama_barang     String
  kategori_id     Int
  stok            Int
  kelompok_barang String
  harga           Int
  kategori        Categories @relation(fields: [kategori_id], references: [id])
}

